{
  "name": "My extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "我的插件",
  "permissions": [],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/focus.png",
    "32": "icons/focus.png",
    "48": "icons/focus.png",
    "128": "icons/focus.png"
  },
  "options_page": "options.html",
  "devtools_page": "devtools.html",
  "action": {
    "default_icon": {
      "16": "icons/focus.png",
      "32": "icons/focus.png",
      "48": "icons/focus.png",
      "128": "icons/focus.png"
    },
    "default_title": "My extension",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/*.js",
        "css/*.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
    ]
}
